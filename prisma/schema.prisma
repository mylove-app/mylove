generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  role          String   @default("user")
  otpCode       String?      
  otpExpires    DateTime?    
  otpVerified   Boolean     @default(false)
  sites         Site[]
  subscription  Subscription?
}

model Site {
  id         Int      @id @default(autoincrement())
  name       String
  subdomain  String   @unique
  template   String
  content    Json?
  userId     Int     
  user       User     @relation(fields: [userId], references: [id])
  expiredAt  DateTime?
}

model Template {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  texts       Int      
  images      Int      
  description String?
  image       String[]
  category    String[]
  price       String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Subscription {
  id     Int   @id @default(autoincrement())
  userId Int   @unique
  user   User  @relation(fields: [userId], references: [id])
  data   Json
}