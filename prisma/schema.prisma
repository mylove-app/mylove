generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  name          String
  email         String          @unique
  password      String
  role          String          @default("user")
  sites         Site[]
  subscription  Subscription?
}

model Site {
  id         Int       @id @default(autoincrement())
  name       String
  subdomain  String    @unique
  templateId Int
  template   Template  @relation(fields: [templateId], references: [id])
  content    Json
  status     Boolean   @default(false)
  userId     Int
  user       User      @relation(fields: [userId], references: [id])
  expiredAt  DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Template {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  image       String[]
  category    String[]
  price       String[]
  html        String?
  css         String?
  js          String?
  fields      Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sites       Site[]
}    


model Subscription {
  id     Int   @id @default(autoincrement())
  userId Int   @unique
  user   User  @relation(fields: [userId], references: [id])
  data   Json
}
